{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "simply-solv-backoffice-fe": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "outputPath": "dist/simply-solv-backoffice-fe/browser",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "assets": ["src/favicon.ico", "src/assets"],
            "styles": ["src/custom-theme.scss", "src/styles.css"],
            "scripts": [],
            "customWebpackConfig": {
              "path": "./webpack.config.ts"
            }
          },
          "configurations": {
            "prod": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1mb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "dev": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "prod"
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "configurations": {
            "prod": {
              "browserTarget": "simply-solv-backoffice-fe:build:prod"
            },
            "dev": {
              "browserTarget": "simply-solv-backoffice-fe:build:dev"
            }
          },
          "defaultConfiguration": "dev"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "simply-solv-backoffice-fe:build"
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": ["src/favicon.ico", "src/assets"],
            "styles": ["src/styles.css"],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        },
        "server": {
          "builder": "@angular-builders/custom-webpack:server",
          "options": {
            "outputPath": "dist/simply-solv-backoffice-fe/server",
            "main": "server.ts",
            "tsConfig": "tsconfig.server.json",
            "customWebpackConfig": {
              "path": "./webpack.config.ts"
            }
          },
          "configurations": {
            "prod": {
              "outputHashing": "media",
              "optimization": true
            },
            "dev": {
              "buildOptimizer": false,
              "optimization": false,
              "sourceMap": true,
              "extractLicenses": false
            }
          },
          "defaultConfiguration": "prod"
        },
        "serve-ssr": {
          "builder": "@nguniversal/builders:ssr-dev-server",
          "configurations": {
            "dev": {
              "browserTarget": "simply-solv-backoffice-fe:build:dev",
              "serverTarget": "simply-solv-backoffice-fe:server:dev"
            },
            "prod": {
              "browserTarget": "simply-solv-backoffice-fe:build:prod",
              "serverTarget": "simply-solv-backoffice-fe:server:prod"
            }
          },
          "defaultConfiguration": "dev"
        },
        "prerender": {
          "builder": "@nguniversal/builders:prerender",
          "options": {
            "routes": ["/"]
          },
          "configurations": {
            "prod": {
              "browserTarget": "simply-solv-backoffice-fe:build:prod",
              "serverTarget": "simply-solv-backoffice-fe:server:prod"
            },
            "dev": {
              "browserTarget": "simply-solv-backoffice-fe:build:dev",
              "serverTarget": "simply-solv-backoffice-fe:server:dev"
            }
          },
          "defaultConfiguration": "prod"
        }
      }
    }
  },
  "cli": {
    "schematicCollections": ["@angular-eslint/schematics"],
    "analytics": false
  }
}
